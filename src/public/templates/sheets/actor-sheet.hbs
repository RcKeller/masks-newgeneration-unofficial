<form class="{{cssClass}} masks-sheet-v2" autocomplete="off">
	{{#if isCharacter}}
	{{!-- New Character Sheet Layout --}}
	<div class="masks-sheet">
		{{!-- Left Panel: Portrait, Identity, Conditions --}}
		{{> "modules/masks-newgeneration-unofficial/templates/parts/actor-left-panel.hbs"}}

		{{!-- Right Section: Tabs + Stats Sidebar --}}
		<div class="masks-sheet__right">
			{{!-- Tabs Container --}}
			<div class="tabs-container">
				{{!-- Tab Navigation --}}
				<nav class="sheet-tabs tabs" data-group="primary">
					<a class="tab-btn active" data-tab="info">
						<i class="fas fa-info-circle"></i>
						<span>Info</span>
					</a>
					<a class="tab-btn" data-tab="powers">
						<i class="fas fa-bolt"></i>
						<span>Powers</span>
					</a>
					<a class="tab-btn" data-tab="playbook">
						<i class="fas fa-book-open"></i>
						<span>Playbook</span>
					</a>
				</nav>

				{{!-- Tab Content --}}
				<div class="tab-content">
					{{> "modules/masks-newgeneration-unofficial/templates/parts/actor-info-tab.hbs"}}
					{{> "modules/masks-newgeneration-unofficial/templates/parts/actor-powers-tab.hbs"}}
					{{> "modules/masks-newgeneration-unofficial/templates/parts/actor-playbook-tab.hbs"}}
				</div>
			</div>

			{{!-- Stats Sidebar --}}
			{{> "modules/masks-newgeneration-unofficial/templates/parts/actor-labels-sidebar.hbs"}}
		</div>
	</div>

	{{else}}
	{{!-- NPC Sheet - Keep existing layout for now --}}
	<div class="sheet-wrapper npc-sheet">
		{{!-- Sheet Header --}}
		{{> "modules/masks-newgeneration-unofficial/templates/parts/actor-header.hbs" }}

		<section class="sheet-top flexcol">
			<section class="sheet-attributes-top">
				{{~> "modules/masks-newgeneration-unofficial/templates/parts/actor-attributes.hbs" attrs=system.attrTop cssClass="cell--attributes-top flexrow" owner=owner editable=editable ~}}
			</section>
		</section>

		<section class="sheet-bottom flexrow">
			{{!-- Sidebar --}}
			{{#if (objLen system.attrLeft)}}
			<section class="sheet-look">
				<div class="cell cell--aesthetics">
					{{> "pbta.actor-attributes" attrs=system.attrLeft cssClass="cell--attributes-left" owner=owner editable=editable}}
				</div>
			</section>
			{{/if}}

			{{!-- Main --}}
			<section class="sheet-main flexcol">
				{{!-- Sheet Tab Navigation --}}
				<nav class="sheet-tabs tabs" data-group="primary">
					<a class="item" data-tab="description">{{localize "PBTA.Description"}}</a>
					<a class="item" data-tab="moves">{{localize "PBTA.Moves"}}</a>
				</nav>

				{{!-- Sheet Body --}}
				<section class="sheet-body">
					{{!-- Main Tab --}}
					{{> "pbta.actor-description" }}

					{{!-- Moves Tab --}}
					{{> "modules/masks-newgeneration-unofficial/templates/parts/actor-movelist.hbs" }}
				</section>
			</section>
		</section>
	</div>
	{{/if}}
</form>
