{{!-- Info Tab: Merged Description + Social + Influences --}}
<div class="tab info" data-group="primary" data-tab="info">
	<section class="sheet-tab info-tab">

		{{!-- Look / Appearance --}}
		{{#with system.details.look}}
		<div class="info-section info-look">
			<label class="info-section-title">{{label}}</label>
			{{editor value target="system.details.look.value" button=true owner=../owner editable=../editable}}
		</div>
		{{/with}}

		{{!-- Abilities --}}
		{{#with system.details.abilities}}
		<div class="info-section info-abilities">
			<label class="info-section-title">{{label}}</label>
			{{editor value target="system.details.abilities.value" button=true owner=../owner editable=../editable}}
		</div>
		{{/with}}

		{{!-- Backstory --}}
		{{#with system.details.backstory}}
		<div class="info-section info-backstory">
			<label class="info-section-title">{{label}}</label>
			{{editor value target="system.details.backstory.value" button=true owner=../owner editable=../editable}}
		</div>
		{{/with}}

		{{!-- Biography / Notes --}}
		{{#with system.details.biography}}
		<div class="info-section info-biography">
			<label class="info-section-title">{{label}}</label>
			{{editor value target="system.details.biography.value" button=true owner=../owner editable=../editable}}
		</div>
		{{/with}}

		{{!-- Team Question --}}
		{{#with system.attributes.teamQuestion}}
		<div class="info-section info-team-question">
			<label class="info-section-title">{{label}}</label>
			{{#if description}}<p class="info-description">{{description}}</p>{{/if}}
			{{editor value target="system.attributes.teamQuestion.value" button=true owner=../owner editable=../editable}}
		</div>
		{{/with}}

		{{!-- Relationship Questions --}}
		{{#with system.attributes.relationshipQuestions}}
		<div class="info-section info-relationships">
			<label class="info-section-title">{{label}}</label>
			{{#if description}}<p class="info-description">{{description}}</p>{{/if}}
			{{editor value target="system.attributes.relationshipQuestions.value" button=true owner=../owner editable=../editable}}
		</div>
		{{/with}}

		{{!-- Influences Section --}}
		<div class="info-section info-influences">
			<h2 class="info-section-title influences-header">
				<label class="item-group-label">
					{{localize "MASKS-SHEETS.Influences"}}
					<span class="item-details-toggle"><i class="fas fa-chevron-up"></i></span>
				</label>
				<div class="item-controls">
					<button type="button" class="influence-control influence-create" title='{{localize "MASKS-SHEETS.InfluenceCreate"}}' data-type="influence">
						<i class="fas fa-plus"></i>
					</button>
				</div>
			</h2>
			<ol class="influences-list">
				{{#each flags.masks-newgeneration-unofficial.influences}}
				<li class="influence-item" data-influence-id="{{id}}">
					<div class="influence-name">
						<img class="influence-icon" data-influence-action="roll" src="modules/masks-newgeneration-unofficial/images/shadow-follower.svg" />
						<input type="text" class="influence--name" value="{{name}}" placeholder="{{localize "MASKS-SHEETS.Person-Name"}}" />
					</div>
					<div class="influence-management">
						<button type="button" class="influence-btn {{#unless hasInfluenceOver}}inactive{{/unless}}"
							data-influence-action="hasInfluenceOver"
							title="{{localize 'MASKS-SHEETS.HasInfluence'}}"
							data-tooltip="{{localize 'MASKS-SHEETS.HasInfluence'}}">
							<i class="fas fa-arrow-down"></i>
						</button>
						<button type="button" class="influence-btn {{#unless haveInfluenceOver}}inactive{{/unless}}"
							data-influence-action="haveInfluenceOver"
							title="{{localize 'MASKS-SHEETS.HaveInfluence'}}"
							data-tooltip="{{localize 'MASKS-SHEETS.HaveInfluence'}}">
							<i class="fas fa-arrow-up"></i>
						</button>
						{{#if locked}}
						<button type="button" class="influence-btn influence-lock" data-influence-action="lock" title="{{localize 'MASKS-SHEETS.Influence-Unlock'}}">
							<i class="fas fa-lock"></i>
						</button>
						{{else}}
						<button type="button" class="influence-btn influence-unlock" data-influence-action="lock" title="{{localize 'MASKS-SHEETS.Influence-Lock'}}">
							<i class="fas fa-lock-open"></i>
						</button>
						{{/if}}
						<button type="button" class="influence-btn influence-delete" data-influence-action="delete" title="{{localize 'MASKS-SHEETS.Delete-Influence'}}">
							<i class="fas fa-trash"></i>
						</button>
					</div>
				</li>
				{{/each}}
			</ol>
		</div>

	</section>
</div>
