{{!-- Info Tab: Biography, Look, Abilities, Notes, Influences --}}
<div class="tab info active" data-group="primary" data-tab="info">
	<section class="sheet-tab info-tab">
		{{!-- Biography --}}
		<div class="info-section info-section--biography">
			<label class="section-title">{{system.details.biography.label}}</label>
			{{editor system.details.biography.value target="system.details.biography.value" button=true owner=owner editable=editable}}
		</div>

		{{!-- Look --}}
		<div class="info-section info-section--look">
			<label class="section-title">{{system.details.look.label}}</label>
			{{editor system.details.look.value target="system.details.look.value" button=true owner=owner editable=editable}}
		</div>

		{{!-- Abilities --}}
		<div class="info-section info-section--abilities">
			<label class="section-title">{{system.details.abilities.label}}</label>
			{{editor system.details.abilities.value target="system.details.abilities.value" button=true owner=owner editable=editable}}
		</div>

		{{!-- Backstory --}}
		<div class="info-section info-section--backstory">
			<label class="section-title">{{system.details.backstory.label}}</label>
			{{editor system.details.backstory.value target="system.details.backstory.value" button=true owner=owner editable=editable}}
		</div>

		{{!-- Influences --}}
		<div class="info-section info-section--influences">
			<div class="section-header">
				<label class="section-title">{{localize "MASKS-SHEETS.Influences"}}</label>
				<button type="button" class="influence-create" title="{{localize 'MASKS-SHEETS.InfluenceCreate'}}" data-action="create-influence">
					<i class="fas fa-plus"></i>
				</button>
			</div>
			<ol class="influences-list">
				{{#each flags.masks-newgeneration-unofficial.influences}}
				<li class="influence-item" data-influence-id="{{id}}">
					<div class="influence-name-row">
						<input type="text" class="influence-name-input" value="{{name}}" placeholder="{{localize 'MASKS-SHEETS.Person-Name'}}" data-action="update-influence-name" />
					</div>
					<div class="influence-controls">
						<button type="button" class="influence-btn {{#if hasInfluenceOver}}active{{/if}}"
							data-action="toggle-influence" data-direction="hasInfluenceOver"
							data-tooltip="{{localize 'MASKS-SHEETS.HasInfluence'}}" data-tooltip-direction="UP">
							<i class="fas fa-arrow-down"></i>
							<span>Has</span>
						</button>
						<button type="button" class="influence-btn {{#if haveInfluenceOver}}active{{/if}}"
							data-action="toggle-influence" data-direction="haveInfluenceOver"
							data-tooltip="{{localize 'MASKS-SHEETS.HaveInfluence'}}" data-tooltip-direction="UP">
							<i class="fas fa-arrow-up"></i>
							<span>Have</span>
						</button>
						<button type="button" class="influence-btn influence-lock-btn"
							data-action="toggle-influence-lock"
							data-tooltip="{{#if locked}}{{localize 'MASKS-SHEETS.Influence-Unlock'}}{{else}}{{localize 'MASKS-SHEETS.Influence-Lock'}}{{/if}}"
							data-tooltip-direction="UP">
							<i class="fas {{#if locked}}fa-lock{{else}}fa-lock-open{{/if}}"></i>
						</button>
						<button type="button" class="influence-btn influence-delete-btn"
							data-action="delete-influence"
							data-tooltip="{{localize 'MASKS-SHEETS.Delete-Influence'}}" data-tooltip-direction="UP">
							<i class="fas fa-trash"></i>
						</button>
					</div>
				</li>
				{{/each}}
			</ol>
			{{#unless flags.masks-newgeneration-unofficial.influences}}
			<p class="no-influences">{{localize "MASKS-SHEETS.NoInfluences"}}</p>
			{{/unless}}
		</div>
	</section>
</div>
