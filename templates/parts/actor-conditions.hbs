{{!-- Conditions Panel: Toggleable condition tags --}}
<div class="conditions-panel">
	<h3 class="conditions-title">{{localize "MASKS-SHEETS.CharacterSheets.conditions.label"}}</h3>
	<div class="conditions-grid">
		{{#each conditionTags as |condition key|}}
		<button type="button"
			class="condition-tag condition--{{condition.cssClass}} {{#if condition.value}}active{{/if}}"
			data-condition-key="{{key}}"
			data-tooltip="{{condition.tooltip}}"
			data-tooltip-direction="UP">
			<i class="{{condition.icon}}"></i>
			<span class="condition-label">{{condition.label}}</span>
		</button>
		{{/each}}
	</div>
</div>
