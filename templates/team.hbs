{{!-- ===================== TURN TRACKER CARDS ===================== --}}
{{#if hasEncounter}}
<section class="masks-turns" aria-label="Team turns">
    {{#if (and isGM gmHasTurnCard)}}
    <article class="masks-turn-card masks-turn-card--gm" data-action="gm-advance">
        <div class="masks-turn-card__status-banner">
            GM TURN
        </div>

        <div class="masks-turn-card__portrait-wrapper">
            <div class="masks-turn-card__portrait masks-turn-card__portrait--gm">
                <span class="masks-turn-card__gm-initials">GM</span>
            </div>
        </div>

        <div class="masks-turn-card__name-row masks-turn-card__name-row--gm">
            <div class="masks-turn-card__name">
                NPC TURN
            </div>
        </div>
    </article>
    {{/if}}
    <article class="masks-turn-card masks-turn-card--gm" data-action="gm-advance">
        <div class="masks-turn-card__status-banner">
            GM TURN
        </div>

        <div class="masks-team__controls">
            <button class="masks-team__btn" type="button" data-action="minus">
                –
            </button>
        
            <input type="number" name="team" class="masks-team__value" value="{{team}}" min="0" {{#unless
                canEdit}}disabled{{/unless}} />
        
            <button class="masks-team__btn" type="button" data-action="plus">
                +
            </button>
        
            <button class="masks-team__btn masks-team__btn--reset" type="button" data-action="reset">
                ⟳
            </button>
        </div>
        
        <div class="masks-team__links">
            {{#each links as |link|}}
            <a data-uuid="{{link.uuid}}" class="content-link">
                <i class="fas fa-book-open"></i>
                <span>{{link.label}}</span>
            </a>
            {{/each}}
        </div>
    </article>

    {{#each cards as |card|}}
    <article
        class="masks-turn-card{{#if card.isDowned}} masks-turn-card--downed{{/if}}{{#unless card.isReady}} masks-turn-card--cooldown{{/unless}}"
        data-actor-id="{{card.actorId}}">
        {{#if card.isDowned}}
        <div class="masks-turn-card__status-banner">
            DOWNED
        </div>
        {{/if}}

        <div class="masks-turn-card__portrait-wrapper">
            <div class="masks-turn-card__portrait" style="background-image: url('{{card.img}}');"></div>

            <div class="masks-turn-card__overlay-bottom">
                <div class="masks-turn-card__pentagon" aria-hidden="true"></div>

                <button type="button" class="masks-turn-card__potential" data-action="add-potential"
                    data-actor-id="{{card.actorId}}" {{#unless card.mayEditPotential}}disabled{{/unless}}
                    aria-label="Add Potential">
                    <div class="masks-turn-card__potential-fill"
                        style="--potential-fill-ratio: {{card.potentialRatio}};"></div>
                    <span class="masks-turn-card__potential-star">★</span>
                </button>
            </div>
        </div>

        <div class="masks-turn-card__name-row" data-action="turn-card" data-actor-id="{{card.actorId}}">
            {{#if card.isOwner}}
            <button type="button" class="masks-turn-card__mini-btn masks-turn-card__mini-btn--left"
                data-action="owner-mark" data-actor-id="{{card.actorId}}">
                *
            </button>
            {{/if}}

            <div class="masks-turn-card__name">
                {{card.nameUpper}}
            </div>

            <div class="masks-turn-card__name-buttons">
                <button type="button" class="masks-turn-card__mini-btn" data-action="plus-one"
                    data-actor-id="{{card.actorId}}">
                    +
                </button>

                {{#if card.isOwner}}
                <button type="button" class="masks-turn-card__mini-btn" data-action="plus-two"
                    data-actor-id="{{card.actorId}}">
                    ++
                </button>
                {{/if}}
            </div>
        </div>

        {{#if card.hasCooldown}}
        <div class="masks-turn-card__cooldown">
            {{#each card.cooldownSlots as |slot|}}
            <span class="masks-turn-card__cooldown-segment {{#if slot.isActive}}is-active{{/if}}"></span>
            {{/each}}
        </div>
        {{/if}}
    </article>
    {{/each}}
</section>
{{/if}}